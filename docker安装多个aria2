
docker run -d \
    --name aria2-pro \
    --restart unless-stopped \
    --log-opt max-size=1m \
    --network host \
    -e PUID=$UID \
    -e PGID=$GID \
    -e RPC_SECRET=P3TERX \
    -e RPC_PORT=6800 \
    -e LISTEN_PORT=6888 \
    -v /mnt/256/aria2c/config/:/config \
    -v /mnt/256/gd:/downloads \
    -e SPECIAL_MODE=rclone \
    p3terx/aria2-pro
